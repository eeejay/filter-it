{
  "manifest_version": 2,
  "name": "Filter it!",
  "version": "1.0",
  "description": "A simple filter button",
  "homepage_url": "https://github.com/eeejay",
  "applications": {
    "gecko": {
      "id": "filter-it@monotonous.org",
      "strict_min_version": "60.0"
    }
  },
  "icons": {
    "48": "icons/filter-it.png",
    "96": "icons/filter-it@2x.png"
  },

  "permissions": [
    "tabs",
    "<all_urls>"
  ],

  "browser_action": {
    "default_icon": "icons/filter-empty-38.png",
    "default_title": "Filter it!"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+V"
      }
    }
  },
  "experiment_apis": {
    "filters": {
      "schema": "api/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "script": "api/api.js",
        "paths": [["filters"]]
      }
    }
  }
}
